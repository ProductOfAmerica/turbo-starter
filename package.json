{
	"name": "turbo-starter",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start",
		"clean": "turbo run clean && rm -rf node_modules",
		"format-write": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"lint:ci": "biome check --line-ending=lf --css-parse-tailwind-directives=true .",
		"check-types": "turbo check-types",
		"docker": "docker-compose down --remove-orphans --volumes && docker container prune -f && docker-compose up --build -d",
		"docker:build": "docker-compose -f docker-compose.yml build"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"turbo": "^2.7.5",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.28.1",
	"engines": {
		"node": ">=24.13.0"
	},
	"volta": {
		"node": "24.13.0",
		"pnpm": "10.28.1"
	}
}
